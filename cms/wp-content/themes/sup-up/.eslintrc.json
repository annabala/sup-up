{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }],
      "brace-style": "off",
      "camelcase": ["error", { "properties": "always" }],
      "comma-dangle": ["error", "always-multiline"],
      "consistent-return": "off",
      "curly": ["error", "multi-line"],
      "indent": ["error", 2, { "ignoreComments": true, "SwitchCase": 1 }],
      "key-spacing": "off",
      "linebreak-style": ["error", "unix"],
      "max-len": ["error", { "code": 105, "tabWidth": 2, "ignoreComments": true }],
      "no-console": "off",
      "no-continue": "off",
      "no-else-return": "off",
      "no-magic-numbers": ["error", { "ignore": [-1,0,1,2, 100] }],
      "no-multi-spaces": ["error", { "exceptions": {"AssignmentExpression": true, "Property": true, "VariableDeclarator": true } }],
      "no-new": "off",
      "no-param-reassign": ["error", { "props": false }],
      "no-plusplus": "off",
      "no-unused-expressions": "off",
      "padded-blocks": "off",
      "quote-props": ["error", "as-needed"],
      "radix": ["error", "as-needed"],
      "no-undef": "off"
    }
}